<Window x:Class="TurtleSharpEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurtleSharpEditor"
        xmlns:a="clr-namespace:AurelienRibon.Ui.SyntaxHighlightBox;assembly=AurelienRibon.Ui.SyntaxHighlightBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <a:SyntaxHighlightBox x:Name="CodeTextBox" Margin="4" Text="namespace Foo { }" Language="" />

    <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" >
      <Image x:Name="OutputImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Border>
  </Grid>
</Window>
